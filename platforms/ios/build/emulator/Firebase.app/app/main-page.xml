<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="About">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Image margin="10" src="~/res/telerik-logo.png" />
              <Label text="Firebase plugin demo" cssClass="title"/>
              <Label text="Create awesome realtime apps with Firebase. Make sure you provide your own Firebase URL in main-view-model.js" textWrap="true"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Demo">
        <TabViewItem.view>
          <ScrollView>
            <GridLayout columns="*, *" rows="auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto" horizontalAlignment="stretch" cssClass="tab-content">
              <Button row="0" colSpan="2" text="init firebase - do this first" tap="{{ doInit }}" cssClass="button button-positive" />
              <Label row="30" colSpan="2" text="Firebase Cloud Messaging" cssClass="subtitle" />
              <Button row="31" colSpan="2" text="register push handlers" tap="{{ doRegisterPushHandlers }}" cssClass="button button-messaging" />
            </GridLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>